{{#if hasBlock}}
  {{yield (hash
    search-box=(component "search-with-modifiers/search-box"
      tokenConfig=tokenConfig
      value=(readonly query)
      onValueChanged=(action "valueDidChange")
      onActiveTokenChanged=(action "updateActiveToken")
      onSearchTriggered=(action "performSearch")
      onClear=(action "performSearch"))
    modifier-list=(if showModifierList (component "search-with-modifiers/search-modifiers"
      hintList=hintList
      focusOnInput=focusOnInput
      onSelect=(action "didSelectModifier")))
  )}}
{{else}}
  {{search-with-modifiers/search-box
      tokenConfig=tokenConfig
      value=(readonly query)
      onValueChanged=(action "valueDidChange")
      onActiveTokenChanged=(action "updateActiveToken")
      onSearchTriggered=(action "performSearch")
      onClear=(action "performSearch")}}

  {{#if showModifierList}}
    {{component "search-with-modifiers/search-modifiers"
        hintList=hintList
        focusOnInput=focusOnInput
        onSelect=(action "didSelectModifier")}}
  {{/if}}
{{/if}}
